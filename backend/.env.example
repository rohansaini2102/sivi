# Server Configuration
NODE_ENV=production
PORT=8080

# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/siviacademy

# JWT Secrets (generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your-64-char-random-secret-here
JWT_REFRESH_SECRET=another-64-char-random-secret-here

# Frontend URL for CORS (comma-separated for multiple domains)
FRONTEND_URL=https://your-app.vercel.app,https://siviacademy.com

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password
